@using System.Configuration;
@using System.Web.Configuration;
@{
    string returnUrl = string.Empty;
    if (System.Web.HttpContext.Current.Request.UrlReferrer != null)
    {
        var mURL = System.Web.HttpContext.Current.Request.UrlReferrer.ToString();
        if (!mURL.Contains("/Display/") && !System.Web.HttpContext.Current.Request.Url.AbsolutePath.Contains("/Edit/"))
        {
            System.Web.HttpContext.Current.Session["ReturnUrl"] = System.Web.HttpContext.Current.Request.UrlReferrer.ToString();
        }
    }

    if (System.Web.HttpContext.Current.Session["ReturnUrl"] != null && System.Web.HttpContext.Current.Session["ReturnUrl"] != "")
    {
        returnUrl = System.Web.HttpContext.Current.Session["ReturnUrl"].ToString();
    }

    List<Task_Tracker_CommonLibrary.Entity.Menu> menus = new List<Task_Tracker_CommonLibrary.Entity.Menu>();
    if (System.Web.HttpContext.Current.Session["user_syscode"] != null)
    {
        if (System.Web.HttpContext.Current.Session["user_syscode"].ToString() == "9999999")
        {
            menus = HttpRuntime.Cache.Get("MenuData1") as List<Task_Tracker_CommonLibrary.Entity.Menu>;
        }
        else
        {
            menus = HttpRuntime.Cache.Get("MenuData2") as List<Task_Tracker_CommonLibrary.Entity.Menu>;
        }
    }
    else
    {
        menus = HttpRuntime.Cache.Get("MenuData1") as List<Task_Tracker_CommonLibrary.Entity.Menu>;
    }


    //menus = HttpRuntime.Cache.Get("MenuData1") as List<Task_Tracker_CommonLibrary.Entity.Menu>;


    Layout = null;
}

