    function ddlChange(obj) {
        var module_syscode = "";
        var project_syscode = "";

        try {

            module_syscode = $('#ddlmodule').val();
            project_syscode = $('#ddlproject').val();

            if (obj.id.includes('project')) {
                if (obj.value == "")
                    $("#divModuleDDL").hide();
                $("#ddlmodule").val('').change();
            }

            $('#WorkflowTable').hide();
            $('#btnLvlTaskSave').hide();

            if (obj.value !== "") {
                var form = $('#ModuleWFLevelMapForm');
                form.submit();
            }
        } catch (e) {
            alert(e.message);
        }
    }

    function Validate() {      
        var sum = 0;
        var isempty = false;

        $('.ChkPercent').each(function () {
            if($(this).val() == '') {
                isempty = true;          
                return false;
            }
            else {
                sum += Number($(this).val());
            }
        });
        if (isempty) {
            bootbox.alert("Please enter Weightage");
            return false;
        }
        if (isempty == false && sum != 100) {
            bootbox.alert("Sum of Percentages should be equal to 100");
            return false;
        }
    }






