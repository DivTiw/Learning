        <div class="card-body">
            @{
                Html.RenderPartial("_SaveTask", @Model);
            }

            <div>
                @Html.HiddenFor(model => model.task_syscode, new { @id = "hid_task_syscode" })
                @Html.HiddenFor(model => model.level_syscode, new { @id = "hid_level_syscode" })
                @Html.HiddenFor(model => model.module_syscode, new { @id = "hid_module_syscode" })
